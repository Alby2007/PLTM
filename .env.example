# API Keys (optional - only needed for fallback extraction)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Feature Flags
ENABLE_API_FALLBACK=false

# Model Configuration
SMALL_MODEL=Qwen/Qwen2.5-3B-Instruct
JUDGE_MODEL=microsoft/Phi-3-mini-4k-instruct

# Thresholds
PROMOTION_THRESHOLD=0.85
DISSOLUTION_FLOOR=0.1

# Tiered Promotion Configuration
INSTANT_CONFIDENCE=0.9
FAST_HOURS=4
FAST_CONFIDENCE=0.8
STANDARD_HOURS=12
STANDARD_CONFIDENCE=0.7
SLOW_HOURS=24

# Database
DB_PATH=data/memory.db

# Vector Store (pgvector)
VECTOR_ENABLED=true
VECTOR_DB_URL=postgresql://localhost:5432/lltm_vectors
VECTOR_MODEL=all-MiniLM-L6-v2
VECTOR_SIMILARITY_THRESHOLD=0.6
VECTOR_DUPLICATE_THRESHOLD=0.9
VECTOR_CONFLICT_THRESHOLD=0.3

# Logging
LOG_LEVEL=INFO
